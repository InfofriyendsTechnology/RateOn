# Server Configuration
PORT=1126
# BACKEND_URL - Leave empty for auto-detection (Vercel or localhost)
# For local: http://localhost:1126
# For production: Auto-detected from VERCEL_URL
BACKEND_URL=

# Database
MONGODB_URI=mongodb://localhost:27017/rateon

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# GOOGLE_CALLBACK_URL - Leave empty for auto-detection
# Auto-detects based on BACKEND_URL or VERCEL_URL
GOOGLE_CALLBACK_URL=

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URL (for CORS and OAuth redirects)
# FRONTEND_URL - Leave empty for auto-detection
# For local: http://localhost:5300 (auto-detected)
# For production: https://rateon-frontend.vercel.app (auto-detected)
FRONTEND_URL=

# Admin Configuration (Optional)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@rateon.com
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
